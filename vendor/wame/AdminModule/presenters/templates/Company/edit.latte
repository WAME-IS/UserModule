{block javascript}
    <script>
        $(document).ready(function(){
            $('ul.tabs').tabs();
        });
    </script>
{/block}


{block content}

<ul class="tabs z-depth-1">
    <li class="tab"><a href="#general" class="active">{_'General'}</a></li>
    <li class="tab disabled"><a href="#parameters">{_'Parameters'}</a></li>
    <li class="tab"><a href="#employees">{_'Employees'}</a></li>
</ul>


<div class="card-panel no-shadow" id="general">
    <div class="row">
        <div class="col-xs-12 col-lg-8">
            {control form}
        </div>

        <div class="col-xs-12 col-lg-4">
            {position adminUserCompanyRightPanel}
        </div>
    </div>
</div>


<div id="employees">
    {if $count == 0}
        <div class="empty-block">
            <div class="text-headline">{_'Employees'}</div>
            <p>{_'This company has no added any employees'}</p>

            <a class="btn btn-success btn-lg ajax-modal ajax-modal-fixed" n:href=":Admin:UserInCompany:create">
                <i class="material-icons">add_circle_outline</i>
                {_'Add employee'}
            </a>
        </div>
    {else}
        <div class="text-headline margin-left margin-bottom">{_'Employees'}</div>

        {control employeesGrid}
    {/if}
</div>