router:
    defaultRoutes:
        '/[<lang>/]users': 'User:User:default'
        '/[<lang>/]user/<id>': 'User:User:show'
        '/[<lang>/]login': 'User:Sign:in'
        '/[<lang>/]logout': 'User:Sign:out'
        '/[<lang>/]registration': 'User:Sign:up'
        '/[<lang>/]profile': 'User:Profile:default'
        '/[<lang>/]settings': 'User:Settings:default'
        '/[<lang>/]reset-password': 'User:Password:forgot'
        '/[<lang>/]verify-account': 'User:Verify:default'
        '/[<lang>/]admin/users': 'Admin:User:default'
        '/[<lang>/]admin/user/create': 'Admin:User:create'
        '/[<lang>/]admin/user/edit/<id>': 'Admin:User:edit'
        '/[<lang>/]admin/user/delete/<id>': 'Admin:User:delete'
